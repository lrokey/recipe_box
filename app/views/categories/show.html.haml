%h1= @category.name
.row
	%ul
		- @category.recipes.each do |recipe|
			%li= link_to recipe.title, recipe
.row
	.col-md-12
		= link_to "Back", categories_path, class: "btn btn-default"
		- if user_signed_in?
			= link_to "Edit", edit_category_path, class: "btn btn-default"
			= link_to "Delete", category_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"

